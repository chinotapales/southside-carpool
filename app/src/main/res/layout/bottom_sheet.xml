<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_window"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="19sp"
            android:textColor="@color/colorBlack"/>
        <com.github.ivbaranov.mli.MaterialLetterIcon
            android:id="@+id/image_bottom"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@id/name_bottom"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"/>
    <RelativeLayout
        android:id="@+id/call_bottom"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/call_bottom_icon"
            android:layout_marginRight="24dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/phone_bottom"/>
        <TextView
            android:id="@+id/call_bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/call_bottom_icon"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:text="Call"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/message_bottom"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/message_bottom_icon"
            android:layout_marginRight="24dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/message_bottom"/>
        <TextView
            android:id="@+id/message_bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/message_bottom_icon"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:text="Message"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/copy_bottom"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/copy_bottom_icon"
            android:layout_marginRight="24dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/copy_bottom"/>
        <TextView
            android:id="@+id/copy_bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/copy_bottom_icon"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:text="Copy to Clipboard"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/star_bottom"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/star_bottom_icon"
            android:layout_marginRight="24dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/star_bottom"/>
        <TextView
            android:id="@+id/star_bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/star_bottom_icon"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:text="Favorite"/>
    </RelativeLayout>
</LinearLayout>